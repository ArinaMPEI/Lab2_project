<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="35dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/tableImage"
        android:layout_width="356dp"
        android:layout_height="264dp"
        android:contentDescription="Таблица умножения"
        android:src="@drawable/table" />

    <EditText
        android:id="@+id/inputNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Введите число от 2 до 9"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/allNumbersButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="Упражнение для всех чисел" />

    <Button
        android:id="@+id/specificNumberButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Упражнение выборочно" />
</LinearLayout>
</ScrollView>